<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape">

    <ImageView
        android:id="@+id/chatDP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_dp" />

    <ImageView
        android:id="@+id/hideChatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/baseline_close_24"
        android:visibility="gone" />

    <TextView
        android:id="@+id/NameLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/chatDP"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="(name)"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/JobLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameLabel"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/chatDP"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="(title of job)"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/JobLabel"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/chatDP"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="(last message sent)"
        android:textSize="13sp" />

</RelativeLayout>